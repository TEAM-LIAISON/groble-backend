<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="springAppName" source="spring.application.name" defaultValue="groble-api-server"/>
    <springProperty scope="context" name="activeProfiles" source="spring.profiles.active" defaultValue="local"/>

    <property name="LOGS_PATH" value="${LOG_PATH:-${user.dir}/logs}"/>
    <property name="LOG_FILE_NAME" value="${LOGS_PATH}/application.log"/>

    <appender name="DEV_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}]  %clr(%-5level) %clr(${PID:-}){magenta} %clr(---){faint} %clr([%15.15thread]){faint} %clr(%-40.40logger{36}){cyan} %clr(:){faint} traceId=%X{traceId:-} spanId=%X{spanId:-} method=%X{httpMethod:-} uri=%X{requestUri:-} clientIp=%X{clientIp:-} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp fieldName="@timestamp" pattern="yyyy-MM-dd'T'HH:mm:ss.SSSXXX"/>
                <logLevel fieldName="level"/>
                <loggerName fieldName="logger"/>
                <threadName fieldName="thread"/>
                <message/>
                <mdc/>
                <context/>
                <arguments/>
                <pattern>
                    <pattern>
                        {
                          "service":"${springAppName}",
                          "env":"${activeProfiles}",
                          "traceId":"%X{traceId:-}",
                          "spanId":"%X{spanId:-}",
                          "httpMethod":"%X{httpMethod:-}",
                          "requestUri":"%X{requestUri:-}",
                          "clientIp":"%X{clientIp:-}",
                          "userAgent":"%X{userAgent:-}"
                        }
                    </pattern>
                    <omitEmptyFields>true</omitEmptyFields>
                </pattern>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_NAME}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_PATH}/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp fieldName="@timestamp" pattern="yyyy-MM-dd'T'HH:mm:ss.SSSXXX"/>
                <logLevel fieldName="level"/>
                <loggerName fieldName="logger"/>
                <threadName fieldName="thread"/>
                <message/>
                <mdc/>
                <context/>
                <arguments/>
                <pattern>
                    <pattern>
                        {
                          "service":"${springAppName}",
                          "env":"${activeProfiles}",
                          "traceId":"%X{traceId:-}",
                          "spanId":"%X{spanId:-}",
                          "httpMethod":"%X{httpMethod:-}",
                          "requestUri":"%X{requestUri:-}",
                          "clientIp":"%X{clientIp:-}",
                          "userAgent":"%X{userAgent:-}"
                        }
                    </pattern>
                    <omitEmptyFields>true</omitEmptyFields>
                </pattern>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <appender name="JSON_FILE_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Grafana Loki Appender -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <!-- Loki 서버 URL - 모니터링 EC2 Private IP (10.0.1.193) -->
            <!-- application-secret-*.yml의 logging.loki.url 설정을 사용 -->
            <url>${logging.loki.url:-http://localhost:3100/loki/api/v1/push}</url>
        </http>
        <format>
            <label>
                <!-- Loki 라벨 - 필터링 및 검색에 사용 -->
                <!-- app: 애플리케이션 이름, env: 환경(dev/prod), host: 서버 호스트명, level: 로그 레벨 -->
                <pattern>app=${springAppName},env=${activeProfiles},host=${HOSTNAME:-unknown},level=%level</pattern>
                <readMarkers>true</readMarkers>
            </label>
            <message class="com.github.loki4j.logback.JsonLayout">
                <!-- JSON 형식의 로그 메시지 -->
                <pattern>
                    {
                      "timestamp": "%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}",
                      "level": "%level",
                      "logger": "%logger{36}",
                      "thread": "%thread",
                      "message": "%message",
                      "traceId": "%X{traceId:-}",
                      "spanId": "%X{spanId:-}",
                      "httpMethod": "%X{httpMethod:-}",
                      "requestUri": "%X{requestUri:-}",
                      "clientIp": "%X{clientIp:-}",
                      "service": "${springAppName}",
                      "env": "${activeProfiles}",
                      "host": "${HOSTNAME:-unknown}"
                      %ex{full}
                    }
                </pattern>
            </message>
        </format>
    </appender>

    <!-- 비동기 Loki Appender (성능 최적화) -->
    <appender name="LOKI_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOKI"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
    </appender>

    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE"/>
        <appender-ref ref="JSON_FILE_ASYNC"/>
    </root>

    <springProfile name="prod">
        <logger name="liaison.groble" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>

        <!-- 운영 환경에서는 Loki로 로그 전송 -->
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="JSON_FILE_ASYNC"/>
            <appender-ref ref="LOKI_ASYNC"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <logger name="liaison.groble" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.hibernate" level="INFO"/>

        <!-- 개발 환경에서도 Loki로 로그 전송 -->
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="JSON_FILE_ASYNC"/>
            <appender-ref ref="LOKI_ASYNC"/>
        </root>
    </springProfile>

    <springProfile name="local">
        <logger name="liaison.groble" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.hibernate" level="INFO"/>

        <!-- 로컬 환경에서는 콘솔만 사용 (Loki 전송 안함) -->
        <root level="INFO">
            <appender-ref ref="DEV_CONSOLE"/>
            <appender-ref ref="JSON_FILE_ASYNC"/>
        </root>
    </springProfile>
</configuration>
